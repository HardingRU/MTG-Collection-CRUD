<% include ../partials/boilerplate %>
      <h1>Your Collection</h1>
      <table class="table table-hover table-dark">
        <thead class="thead-dark">
        <tr>
          <th>Card Name</th>
          <th>Colors</th>
          <th>Mana Cost</th>
          <th>Card Type</th>
          <th>Attack</th>
          <th>Defense</th>
          <th>Rarity</th>
          <th>Set ID</th>
          <th>Card Text</th>
          <th></th>
        </tr>
      </thead>
        <% cards.forEach(card => { %>
          <% const cardLink = "/cards/" + card.id %>
          <tr>
            <td><a href=<%= cardLink %> class="preview"> <%= card.name %><img src=<%=card.img_url%> class="hide-image" /></a></td>
            <td><%= card.colors %></td>
            <td><%= card.mana_cost %></td>
            <td><%= card.type %></td>
            <td><%= card.attack %></td>
            <td><%= card.defense %></td>
            <td><%= card.rarity  %></td>
            <td><%= card.set_name %></td>
            <td><%= card.card_text %></td>

          <form action="/cards/<%= card.id %>?_method=Delete" method="Post">
            <td><input class="btn-sm btn-primary" type="Submit" value="Delete"/></td>
          </form>
          </tr>
          <% }) %>
    </table>


<% include ../partials/footer %>
